mixin link(text=null, style='', icon=null, href="#")
  a(class=`button-small button-tablet-medium button-desktop-large ${style}` data-open-modal=data href=href target="_blank")
    if icon
      img(class="button-icon" src=`../assets/icons/${icon}.svg` alt=`${icon}`)
    if text
      span(class="button-text") #{text}